{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build all",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "all",
                "PROJECT_NAME=${config:project_name}",
                "-j4"
            ],
            "dependsOn": "Build clean"
        },
        {
            "label": "Build clean",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "PROJECT_NAME=${config:project_name}",
                "clean"
            ]
        },
        {
            "label": "Flash controller",
            "group": "build",
            "type": "shell",
            "command": "st-flash",
            "args": [
                //"--connect-under-reset",
                "--reset",
                "write",
                "!build/main.bin",
                "0x08000000"
            ],
            "dependsOn": "Build all",
        },
        {
            "label": "DFU Controller",
            "group": "build",
            "type": "shell",
            "command": "dfu-util",
            "args": [
                "-a",
                "0",
                "-D",
                "!build/main.bin",
                "-s",
                "0x08000000",
                "-R",
                "-v"
            ],
            "dependsOn": "Build all",
        },
        {
            "label": "Open UART Terminal",
            "group": "build",
            "type": "shell",
            "command": "screen",
            "args": [
                "/dev/tty.usbmodem*",
                "115200",
                "8N1"
            ]
        }
    ]
}